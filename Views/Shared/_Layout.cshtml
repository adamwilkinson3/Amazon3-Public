<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Amazon2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Amazon2.styles.css" asp-append-version="true" />
</head>
<body>
    <div style="min-height: 100vh; display: grid; grid-template-rows: auto 1fr auto;">
        <header class="sticky-top">
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark box-shadow px-3">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Amazon2</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1 justify-content-end">
                            <li class="nav-item">
                                <a class="nav-link" href="~/Home">Returns</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Cart">Cart</a>
                            </li>
                            <partial name="_LoginPartial" />
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <div class="container bg-light">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="navbar-dark bg-dark py-4">
            <div class="container">
                <ul class="navbar-nav">
                    <li>
                        <a href="#" class="text-decoration-none">Careers</a>
                    </li>
                    <li>
                        <a href="#" class="text-decoration-none">Newsletter</a>
                    </li>
                    <li>
                        <a href="#" class="text-decoration-none">About</a>
                    </li>
                    <li>
                        <a href="#" class="text-decoration-none">Accessibility</a>
                    </li>
                </ul>
            </div>
        </footer>
    </div>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
